<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/msg.swipelayout"
        android:layout_width="match_parent"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">

        <RelativeLayout
            android:background="@android:color/holo_red_light"
            android:layout_height="match_parent"
            android:layout_width="100dp">

            <ImageView
                android:id="@+id/msgRight.iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_delete_24"/>

        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="300dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_right_message"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/msgRight.cvProfPic"
            app:cardElevation="10dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="false"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            app:cardCornerRadius="50dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/msg.profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/round_button"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic_temp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_toLeftOf="@+id/msgRight.cvProfPic"
            android:id="@+id/msg.show_message"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="Hello"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>
</RelativeLayout>
