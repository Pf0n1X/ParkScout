<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:padding="8dp"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:background="@drawable/background_right_message">

    <androidx.cardview.widget.CardView
        android:id="@+id/msgRight.cvProfPic"
        app:cardElevation="10dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/msgRight.ibUserImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/round_button"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic_temp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_toLeftOf="@+id/msgRight.cvProfPic"
        android:id="@+id/msgRight.tvMsg"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:text="Hello"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>